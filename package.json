{
    "name": "cowboybebot_js",
    "version": "1.9.4",
    "description": "La version JS de CowboyBeBOT",
    "main": "index.js",
    "scripts": {
        "test:local": "jest --coverage --coverageDirectory=coverage",
        "test:ci": "jest --testResultsProcessor ./node_modules/jest-junit --coverage --coverageDirectory=coverage"
    },
    "author": "Sedatyf",
    "license": "ISC",
    "jest": {
        "collectCoverageFrom": [
            "**/*.{js,jsdom}",
            "!**/node_modules/**",
            "!**/build/**",
            "!**/definitionfiles/**",
            "!**/WebWrokers/**"
        ],
        "coverageReporters": [
            "lcov",
            "text"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": "coverage/junit.xml",
        "classNameTemplate": "{classname} - {title}",
        "titleTemplate": "{classname} - {title}",
        "ancestorSeparator": " > ",
        "usePathForSuiteName": "true"
    },
    "dependencies": {
        "@discordjs/builders": "^0.12.0",
        "@discordjs/rest": "^0.3.0",
        "discord-api-types": "^0.31.2",
        "discord.js": "^14.0.3",
        "dotenv": "^16.0.1",
        "jsdom": "^19.0.0",
        "node-schedule": "^2.1.0",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "eslint": "^8.20.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.6.0",
        "jest": "^28.1.3",
        "jest-junit": "^14.0.0"
    }
}
